                <script>
	function rollDice() {
    // Gera um número aleatório entre 1 e 7
    let roll = Math.floor(Math.random() * 7) + 1;
        
    // Define a opção correspondente para cada resultado
    let option;
    switch (roll) {
      case 1:
        option = "Colinas";
        break;
      case 2:
        option = "Deserto";
        break;
      case 3:
        option = "Floresta";
        break;
      case 4:
        option = "Montanha";
        break;
      case 5:
        option = "Pântano";
        break;
      case 6:
        option = "Planície";
        break;
      case 7:
        option = "Subterrâneo";
        break;
    }
  // Altera o conteúdo da div com o ID "result"
    document.getElementById("result").innerHTML = option;
        
  }
  
  function rollDice1() {
    // Gera um número aleatório entre 1 e 4
    let roll1 = Math.floor(Math.random() * 4) + 1;
        
    // Define a opção correspondente para cada resultado
    let option1;
    switch (roll1) {
      case 1:
        option1 = "Sem ligação com o mar";
        break;
      case 2:
        option1 = "Sem ligação com o mar";
        break;
      case 3:
        option1 = "Sem ligação com o mar";
        break;
      case 4:
        option1 = "Possui ligação com o mar";
        break;
      
    }
  // Altera o conteúdo da div com o ID "result"
    document.getElementById("result1").innerHTML = option1;
        
  }
  
  function rollDice2() {
    // Gera um número aleatório entre 1 e 4
    let roll2 = Math.floor(Math.random() * 4) + 1;
        
    // Define a opção correspondente para cada resultado
    let option2;
    switch (roll2) {
      case 1:
        option2 = "Sem Elemento Místico";
        break;
      case 2:
        option2 = "Sem Elemento Místico";
        break;
      case 3:
        option2 = "Sem Elemento Místico";
        break;
      case 4:
        option2 = "Possui Elemento Místico";
        break;
      
    }
  // Altera o conteúdo da div com o ID "result"
    document.getElementById("result2").innerHTML = option2;
        
  }
  
</script>

<script>
  function optionSelected() {
    // Obtém a opção selecionada
    let selectedOption = document.getElementById("reinos").value;

    // Altera a imagem exibida com base na opção selecionada
    let imageElement = document.getElementById("reino-imagem");
    if(selectedOption === "nenhum"){
    	 imageElement.src = "https://preview.redd.it/acgreznsj1671.jpg?width=960&crop=smart&auto=webp&s=7a4cdca1eddab4f1fa6637c1121b622b099c3c52";
          
         
    
    }else if (selectedOption === "ahlen") {
      imageElement.src = "https://i.pinimg.com/564x/33/f0/98/33f098dbacc07bdb1c44748be3315792.jpg";
      
    
    
    } else if (selectedOption === "bielefeld") {
      imageElement.src = "https://i.pinimg.com/564x/79/73/f2/7973f2af996a9833a50a1e8949d468bc.jpg";
     
      
      
    }
  }
</script>


